                </nav>
                <!-- End Filter -->
            </div>

            <div class="span9">
              <div class="row">
                  <section id="projects">
                      <ul id="thumbs">

{% collection "projects" order desc %}{% for item in collection.items %}
              <!-- Item Project and Filter Name -->
                      <li class="item-thumbs span3  {{ item.category }}">
                          <div class="image-wrap">
                        
                              <!-- Fancybox - Gallery Enabled - Title - Full Image -->
                              <a class="hover-wrap fancybox" data-fancybox-group="gallery" title="{{ item.title }}" href="{{ item.slug | append: '/banner.png' | asset_url }}">
                           
                                <span class="overlay-img"></span>
                                  <span class="overlay-img-thumb font-icon-plus">
                                       <!-- qui c'Ã¨ il piu della selezione -->
                                  </span>
                              </a>

                              <!-- Thumb Image and Description -->
                              <img src="{{ item.slug | append: '/thumbnail.png' | asset_url }}" alt="{{ item.body }}">
                            </div>
                            <!-- <h3 class="profile-name">{{ item.title }}</h3> -->
                        </li>
            <!-- End Item Project -->
{% endfor %}{% endcollection %}

                        </ul>
                    </section>

              </div>
            </div>
        </div>
        <!-- End Portfolio Projects -->
    </div>
